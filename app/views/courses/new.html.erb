<!-- Validation failure messages -->
<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Course</h3>
</div>

<div class="row">
  <div class="col-md-8">
    <form action="/create_course" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for course_id -->
      <div class="form-group">
        <label for="course_id" class="control-label">
          Course Number
        </label>

        <input type="text" id="number" name="number" placeholder="Ex: 40000" class="form-control form-control-height" value="<%= @course.number %>">
      </div>

      <!-- Label and input for section -->
      <div class="form-group">
        <label for="section" class="control-label">
          Section
        </label>

        <input type="text" id="section" name="section" placeholder="Ex: 81, 85" class="form-control" value="<%= @course.section %>">
      </div>

      <!-- Label and input for course_title -->
      <div class="form-group">
        <label for="course_title" class="control-label">
          Course Title
        </label>

        <input type="text" id="title" name="title" placeholder="Ex: Application Development" class="form-control" value="<%= @course.title %>">
      </div>

      <!-- Label and input for quarter -->
      <div class="form-group">
        <label for="quarter" class="control-label">
          Quarter
        </label>

        <input type="text" id="quarter" name="quarter" placeholder="Ex: Spring, Summer, Autumn, Winter" class="form-control" value="<%= @course.quarter %>">
      </div>

      <!-- Label and input for year -->
      <div class="form-group">
        <label for="year" class="control-label">
          Year
        </label>

        <input type="text" id="year" name="year" placeholder="Ex: 2049" class="form-control" value="<%= @course.year %>">
      </div>

      <!-- Label and input for daytime -->
      <div class="form-group">
        <label for="daytime" class="control-label">
          Day & Time
        </label>

        <input type="text" id="daytime" name="daytime" placeholder="Ex: F 6:00PM - 9:00PM" class="form-control" value="<%= @course.daytime %>">
      </div>

      <!-- Label and input for prereq -->
      <div class="form-group">
        <label for="prereq" class="control-label">
          Prerequisite
        </label>

        <input type="text" id="prereq" name="prereq" placeholder="Ex: 30000, 35000 (leave blank if none)" class="form-control" value="<%= @course.prereq %>">
      </div>

      <!-- Label and input for professor_id -->
      <div class="form-group">
        <label for="professor_id" class="control-label">
          Professor
        </label>

          <%= select_tag(:professor_id, options_from_collection_for_select(Professor.all, :id, :name, @course.professor_id), :class => "form-control") %>
          <p class="help-block">
            <a href="/professors/new">or add a new professor profile</a>
          </p>

      </div>

      <br>
      <button class="btn btn-xs btn-success">
        Create Course
      </button>
      or
      <a class="font-size12" href="/courses">Cancel</a>
    </form>
  </div>
</div>
