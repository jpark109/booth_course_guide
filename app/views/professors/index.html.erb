<div class="page-header">
  <h3>
    Faculty
    <br>
    <a href="/professors/new" class="btn btn-xs btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Add New Faculty</a>
  </h3>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr class="primary-font-regular">
        <th>Name</th>
        <th>Title</th>
        <th>Actions</th>
      </tr>

      <% @professors.each do |professor| %>
      <tr class="primary-font-light">
        <td><a href="/professors/<%= professor.id %>"><%= professor.name %></a></td>
        <td><%= professor.title %></td>
        <td>
          <a href="/professors/<%= professor.id %>/edit"><i class="fa fa-fw fa-edit"></i></a>
          <a href="/delete_professor/<%= professor.id %>" rel="nofollow"><i class="fa fa-trash" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
